{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "removeComments": false,
    "baseUrl": "./src",
    "paths": {
      "@imports/*": ["../@imports/*"],
      "gi://*":     ["../@gi/*"],
      "@global":    ["./global.d.ts"],
    },
    "outDir": "./_build/"
  },
  "include": ["./src/**/*.ts"  ],
}
